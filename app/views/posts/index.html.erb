<% @posts.each do |post| %>
  <% @post = post %>
  <% user = User.where(id: post.user_id) %>
    <br>
    <% user.each do |user| %>
      Post Author: <%= user.username %>
    <% end %><br>
    Reactions:
    <%= post.likes %><br><br>
    Content: <br>  <%= post.content %> <br><br>

    <% post.comments.each do |comment| %>
      comment author: <%= User.where(id: comment.author_id).pluck(:username).first %><br>
      Comments: <br> <%= comment.content %><br>
      <br>
    <% end %>
    <br>
   <%= form_for(@comment) do |f| %>
      <div class="field">
          <%= f.label :content %><br />
          <%= f.text_field :content %>
          <%= f.hidden_field :id, :value=>post.id %>
      </div>
      <div class="actions">
          <%= f.submit "Create Comment" %>
      </div>
    <%end %>
    <br>
    <%= link_to  "View Post", post,id:"post-button" %>
    <br>
    <br>
    ***********************************************************************************************************
<% end %>
