<% @posts.each do |post| %>
  <% user = User.where(id: post.user_id) %>
  <br>
  <% user.each do |user| %>
    Post Author: <%= user.username %>
  <% end %><br>
   Reactions:
  <%= post.reactions.map(&:user_reaction) %><br><br>
  Content:  <%= post.content %> <br><br>
  <% post.comments.each do |comment| %>
    Comment: <%= comment.content %><br>
    <% end %>
    <br>

<% end %>
