<div class="container col d-flex justify-content-center mt-5">
  <div class="w-50">
  <div class="d-flex justify-content-center">
    <%= form_for @post do |f|  %>
      <%= f.text_field :content, placeholder:'What are you thiking?' %><br>
      <%= f.file_field :avatar %><br>
      <%= f.submit 'Post it',:class => 'btn mt-2' %>
    <% end %>
    </div>
    <br>
    <div class="separator"><div>
    <br>
      <% @posts.each do |post| %>
      <% @post = post %>
      <div class='shadow hoverable'>
      <%= author_avatar(post) %>
      <%= post.author.username %><br>
      <%= post.content %>
      <%= post_picture(post) %>
      <br>
      <%= post.likes %>
      <%= link_to 'Like', {:controller => "posts", :action => "add_like", :post_id => @post.id, } , :method=>:post  %>
      <%= link_to 'View', post %>
      <br><br>
      <div class="separator"><div>
      <br>
    <% end %>
  </div>
  <%= will_paginate @posts %>
</div>
