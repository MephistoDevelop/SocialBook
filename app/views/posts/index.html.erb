<div class="container col d-flex justify-content-center">
  <div>
    <% @posts.each do |post| %>
      <% @post = post %>
      <%= author_avatar(post) %>
      <%= post.author.username %>
      <%= post.content %>
      <%= post_picture(post) %>
      <br>
      <%= post.likes %>
      <%= link_to 'Like', {:controller => "posts", :action => "add_like", :post_id => @post.id, } , :method=>:post  %>
      <%= link_to 'View', post %>
      <br>
    <% end %>
  </div>
  <%= will_paginate @posts %>
</div>
