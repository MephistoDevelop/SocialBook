Comments Sections:<br><br><br>
<% @post.comments.each do |comment| %>
 <div>Author: <%=User.where(id: comment.author_id).pluck(:username)[0] %><br> <%= comment.content %></div>
<br><br>
<% end %>
<%= form_for(@comment) do |f| %>
      <div class="field">
          <%= f.label :content %><br />
          <%= f.text_field :content %>
          <%= f.hidden_field :id, :value=>@post.id %>
      </div>
      <div class="actions">
          <%= f.submit "Create Comment" %>
      </div>
    <%end %>

